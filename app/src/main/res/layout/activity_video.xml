<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".VideoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reproductor de video"
            android:textSize="70dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"/>


        <VideoView
            android:id="@+id/videoView"
            android:layout_width="400dp"
            android:translationX="10dp"
            android:layout_height="400dp" />

        <Button
            android:id="@+id/videoPlay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:translationY="10dp"
            android:translationX="20dp"
            android:background="@drawable/playvideo"
             />

        <Button
            android:id="@+id/videoPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:translationX="150dp"
            android:translationY="-70dp"
            android:background="@drawable/pausevideo"
            />

        <Button
            android:id="@+id/videoStop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:translationX="280dp"
            android:translationY="-150dp"
            android:background="@drawable/stopvideo"
             />
    </LinearLayout>
</RelativeLayout>